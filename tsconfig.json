{
    "compilerOptions": {
        "target": "ES2017",  // Uppdaterad för bättre stöd för async/await
        "module": "ES6",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "moduleResolution": "node",  // Lägg till detta för bättre upplösning av moduler
        "resolveJsonModule": true,  // Om du behöver importera .json filer
        "lib": ["DOM", "ES2017", "DOM.Iterable"],  // Specificera vilka bibliotek som ska inkluderas
        "allowJs": true  // Om du vill tillåta JS filer i ditt TypeScript-projekt
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}